# CV Screener Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control!

# ============================================
# DEFAULT MODE
# ============================================
DEFAULT_MODE=local                       # "local" | "cloud"

# ============================================
# HUGGINGFACE CONFIGURATION (FREE - v7 Features)
# ============================================
# Get your FREE API key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_api_key_here

# Model configuration (defaults are recommended)
HF_NLI_MODEL=microsoft/deberta-v3-base-mnli
HF_RERANKER_MODEL=BAAI/bge-reranker-base
HF_ZEROSHOT_MODEL=MoritzLaurer/deberta-v3-base-zeroshot-v2.0

# Feature flags (all enabled by default)
USE_HF_GUARDRAILS=true                   # Zero-shot classification guardrails
USE_HF_RERANKER=true                     # Cross-encoder reranking (100x faster)
USE_HF_NLI=true                          # NLI-based hallucination detection
USE_RAGAS_EVAL=true                      # RAGAS quality metrics logging

# ============================================
# LOCAL MODE CONFIGURATION
# ============================================
# Google AI Studio (for Gemini LLM)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=cv_collection

# Local embeddings model (auto-downloaded)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# CLOUD MODE CONFIGURATION
# ============================================
# OpenRouter (for embeddings + LLM)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Supabase (for pgvector + storage)
# Get credentials from: Project Settings â†’ API
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
SUPABASE_BUCKET_NAME=cv-pdfs

# ============================================
# SHARED CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173
LOG_LEVEL=INFO
LOG_FILE=app.log

# File Upload Limits (in bytes)
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=50

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_TPM=100000

# Optional: Local Embeddings
USE_LOCAL_EMBEDDINGS=false

# Optional: LangSmith Monitoring
ENABLE_LANGSMITH=false
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=cv-screener

# Frontend Configuration (Vite)
VITE_API_BASE_URL=http://localhost:8000/api
