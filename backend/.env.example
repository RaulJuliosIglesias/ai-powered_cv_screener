# CV Screener Backend Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to version control

# ============================================
# DEFAULT MODE
# ============================================
DEFAULT_MODE=local                       # "local" | "cloud"

# ============================================
# LOCAL MODE CONFIGURATION
# ============================================
# Google AI Studio (for Gemini LLM)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=cv_collection

# Local embeddings model (auto-downloaded)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# CLOUD MODE CONFIGURATION
# ============================================
# OpenRouter (for embeddings + LLM)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_key_here

# Supabase (for pgvector)
# Get credentials from: Project Settings â†’ API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# SHARED CONFIGURATION
# ============================================
# Server
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173

# Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=50

# Logging
LOG_LEVEL=INFO

# RAG
RETRIEVAL_K=5
RETRIEVAL_SCORE_THRESHOLD=0.3

# LLM
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
